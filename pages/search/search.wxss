.search-page .input {
  width: 100%;
  height: 40px;
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #c0c0c0;
  align-items: center;
}
.search-page .input input {
  height: 40px;
  margin-left: 20px;
}
.search-page .cancel {
  color: dimgray;
  margin-right: 20px;
}
.search-page .history {
  padding: 20px;
}
.search-page .history-title {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  color: #584444;
}
.search-page .hidden {
  display: none;
}
.search-page .history-part {
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
}
.search-page .history-txt {
  padding: 2px 6px;
  background: #f0f0f0;
  margin-right: 5px;
  margin-bottom: 5px;
  border-radius: 4px;
}
