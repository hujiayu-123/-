.register {
  padding: 14px;
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 100vh;
}
.register .register-title {
  font-size: 28px;
  margin-top: 10px;
}
.register .register-des {
  font-size: 14px;
  color: #909399;
  margin-top: 10px;
}
.register .register-form {
  margin-top: 20px;
}
.register .register-form .inp-lay {
  height: 40px;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}
.register .register-form .ver-code {
  display: flex;
  height: 40px;
  align-items: center;
  justify-content: space-between;
}
.register .register-form .ver-btn {
  padding: 0 8px;
  background: #409eff;
  color: #fff;
  height: 100%;
  line-height: 40px;
  border-radius: 4px;
}
.register .register-form .mask {
  opacity: 0.6;
}
.register .register-form .ver-inp {
  display: flex;
  align-items: center;
}
.register .register-btn {
  width: 100%;
  height: 40px;
  border-radius: 4px;
  background: #409eff;
  color: #fff;
  font-weight: 700;
  font-size: 17px;
  line-height: 40px;
  text-align: center;
}
.register .register-bg {
  position: absolute;
  bottom: 14px;
  width: calc(100% - 28px);
  z-index: -1;
  opacity: 0.6;
}
.register .register-bg .register-img {
  width: 100%;
}
