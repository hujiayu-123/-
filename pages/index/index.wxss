/**index.wxss**/
.index .search-lay {
  padding: 14px;
}
.index .search {
  width: 100%;
  height: 40px;
  border-radius: 20px;
  border: 1px solid #bbbbbb;
  display: flex;
  align-items: center;
}
.index .search-img {
  width: 25px;
  margin: 0 20px;
}
.index .search-txt {
  color: #bbbbbb;
}
.index .swiper {
  padding: 0 14px;
}
.index .sw-item {
  width: 100%;
}
.index .sw-img {
  width: 100%;
  border-radius: 20px;
}
.index .tab {
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-between;
}
.index .tab-item {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 40px;
}
.index .tab-active {
  color: #298cf6;
}
